<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
<link rel="stylesheet" href="/css/card.css">
</head>
<%- include('../includes/navigation.ejs') %>
    <main>
        <% if(prod.length ==0 ) {%>
            <h1>No products...</h1>
            <% } else { prod.forEach((product)=>{ %>
            <div class="card">
                <div class="card-img">
                    <img src="https://cdn3d.iconscout.com/3d/premium/thumb/product-5806313-4863042.png" alt="product" width="100%" height="100%">
                </div>
                <div class="card-info">
                    <p class="text-title"><%=product.title %></p>
                    <p class="text-body">Fun Product!!!</p>
                </div>
                <div class="card-footer">
                    <span class="text-title">$499.49</span>
                </div>
                <button>Add to cart</button>
            </div>
            <% });} %>
    </main>
    <%- include('../includes/end.ejs') %>