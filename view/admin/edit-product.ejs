<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <div class="form-control">
            <form action="/admin/<% if(editing){%>edit-product/<%=product.id%>?editing=true<%} else {%>/add-product<%}%>"method="POST">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" value="<%if(editing){%><%=product.title%><%}%>">

                <label for="imageurl">Image URL:</label>
                <input type="text" id="imageurl" name="imageurl" value="<%if(editing){%><%=product.imageurl%><%}%>">

                <label for="price">Price:</label>
                <input type="number" id="price" name="price" value="<%if(editing){%><%=product.price%><%}%>">
                
                <label for="description">description</label>
                <textarea id="" cols="50" rows="5" id="description" name="description"><%if(editing){%><%=product.description%><%}%></textarea>
                <br>

                <button type="submit"><% if(editing) {%>Update<%} else{%>add<%}%>
                    
                </button>
            </form>
        </div>

    </main>
<%- include('../includes/end.ejs') %>